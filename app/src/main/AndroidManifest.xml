<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dikshay.mobilecomputing.assignments.ifthisthenthat">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.dikshay.mobilecomputing.assignments.ifthisthenthat.googledrive.ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">

            <!-- <meta-data android:name="com.google.android.apps.drive.APP_ID" android:value="@string/google_app_id" /> -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".battery.BatteryService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".battery.BatteryDisconnectDataService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".battery.BatterySendMessageService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".ImageUpload.ImageUploadDropboxService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".ImageUpload.ImageUploadDriveService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".receipes.BatteryReduceBrightness" />
        <activity
            android:name=".battery.DummyBrightnessActivity"
            android:excludeFromRecents="true"
            android:taskAffinity="com.dikshay.mobilecomputing.assignments.ifthisthenthat.battery.Dummy"
            android:theme="@style/EmptyActivity" />
        <activity android:name=".receipes.BatteryDisconnectData" />
        <activity android:name=".receipes.BatterySendMessage" />
        <activity android:name=".receipes.NewImageUploadToDropbox" />
        <activity android:name=".googledrive.TestActivity" />
        <activity
            android:name=".receipes.NewImageUploadToGoogleDrive"
            android:label="@string/title_activity_new_image_upload_to_google_drive"
            android:theme="@style/AppTheme" />
        <activity android:name=".receipes.NewImageUploadToDrive"></activity>
    </application>

</manifest>
